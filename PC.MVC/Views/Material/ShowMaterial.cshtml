
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowMaterial</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/layuiadmin/layui/layui.js"></script>
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div>
        <table>
            <tr>
                <td><h2>筛选</h2></td>
            </tr>
            <tr>
                <td><input id="Materialid" type="text" placeholder="物料编号" /></td>
                <td><input id="Materialname" type="text" placeholder="物料名称" /></td>
                <td><input id="Materialprice" type="text" placeholder="物料价格" /> —— </td>
                <td><input id="Materialprice1" type="text" placeholder="物料价格" /></td>
                <td><input id="screen" type="button" value="筛选" class="btn btn-info" onclick="Screen('all')" /></td>
                <td>
                    <input id="btnAdd" type="button" value="添加" class="btn btn-outline-primary" onclick="AddMaterial()" />
                </td>
            </tr>
        </table>
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>选择</td>
                    <td>物料编号</td>
                    <td>物料名称</td>
                    <td>缩略图</td>
                    <td>物料类型</td>
                    <td>价格</td>
                    <td>库存数量</td>
                    <td>剩余数量</td>
                    <td>产品上架</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody id="tb"></tbody>
        </table>
    </div>

    <div>
        <input id="btn_First" type="button" value="首页" onclick="Screen('first')" />
        <input id="btn_Prev" type="button" value="上一页" onclick="Screen('prv')" />
        当前第<label id="pageindex">1</label>页/每页<label id="pagesize">3</label>
        总共<label id="totalcount"></label>条/总共<label id="pagetotal"></label>页
        <input id="btn_Next" type="button" value="下一页" onclick="Screen('next')" />
        <input id="btn_Last" type="button" value="尾页" onclick="Screen('last')" />
    </div>
</body>
</html>
<script>
    //var PageIndex = 1; //页码
    //var PageSize = 3;  //页大小
    //var PageCount = 0; //总页数
    //显示物料信息
    $(function () {
        Show();
    })
    //ajax显示物料信息
    function Show() {
        $.ajax({
            url: "http://localhost:49764/api/material/SelMaterial",
            dataType: "json",
            data: {
                Materialprice: -1,
                Materialprice1: -1,
                PageIndex: "1",
                PageSize: "3"
            },
            type: "get",
            success: function (d) {
                $("#totalcount").text(d.dataCount);
                $("#pagetotal").text(d.pageCount);
                $("#tb").empty();
                console.log(d);
                $(d.pageShowMateriallist).each(function () {

                    var list = '<tr>' +
                        '<td><input class="chk" type="checkbox" value="" /></td>' +
                        '<td>' + this.material_Id + '</td>' +
                        '<td>' + this.material_Name + '</td>' +
                        '<td><img src="http://localhost:49764' + this.material_Image + '" alt="" /></td>' +
                        '<td>' + this.mType_Name + '</td>' +
                        '<td>' + this.material_Price + '</td>' +
                        '<td>' + this.material_Number + '</td>' +
                        '<td>' + this.material_LastNumber + '</td>' +
                        '<td>' + (this.material_State == 1 ? "上架" : "下架") + '</td>' +
                        '<td><input id="Detail" type="button" value="查看详情" onclick="detail(' + this.id + ')"/><input id="edit" type="button" value="编辑"  onclick="Edit(' + this.id + ')"/></td>' +
                        '</tr>'
                    $("#tb").append(list);
                })
            }
        })
    }

    //多条件查询物料信息
    function Screen(names) {
        var PageIndex = Number($("#pageindex").text());
        var pageCount = Number($("#pagetotal").text());
        switch (names) {
            case 'all':
                PageIndex = -1;
                break;
            case 'first':
                $("#pageindex").text(1);

                break;
            case 'prv':
                if (PageIndex > 1) {
                    $("#pageindex").text(Number($("#pageindex").text()) - Number(1));
                }

                break;
            case 'next':
                if (PageIndex < pageCount) {
                    $("#pageindex").text(Number($("#pageindex").text()) + Number(1));
                }

                break;
            case 'last':
                $("#pageindex").text(pageCount);
                break;


            default:

                break;
        }
        var Materialid = $("#Materialid").val();
        var Materialname = $("#Materialname").val();
        var Materialprice = -1;
        if ($("#Materialprice").val() != "") {
            Materialprice = $("#Materialprice").val();
        }
        var Materialprice1 = -1;
        if ($("#Materialprice1").val() != "") {
            Materialprice1 = $("#Materialprice1").val();
        }

        var PageIndex = $("#pageindex").text(); //页码

        var PageSize = $("#pagesize").text();  //页大小
        // var PageCount = 0; //总页数
        $.ajax({
            url: "http://localhost:49764/api/material/SelMaterial",
            type: "get",
            data: {
                Materialid: Materialid,
                Materialname: Materialname,
                Materialprice: Materialprice,
                Materialprice1: Materialprice1,
                PageIndex: PageIndex,
                PageSize: PageSize
            },
            dataType: "json",
            success: function (d) {
                $("#pagetotal").text(d.pageCount);
                $("#totalcount").text(d.dataCount);
                $("#pageCount").text(d.pageCount);
                $("#tb").empty();
                $(d.pageShowMateriallist).each(function () {
                    var list = '<tr>' +
                        '<td><input class="chk" type="checkbox" value="" /></td>' +
                        '<td>' + this.material_Id + '</td>' +
                        '<td>' + this.material_Name + '</td>' +
                        '<td>' + this.material_Image + '</td>' +
                        '<td>' + this.mType_Name + '</td>' +
                        '<td>' + this.material_Price + '</td>' +
                        '<td>' + this.material_Number + '</td>' +
                        '<td>' + this.material_LastNumber + '</td>' +
                        '<td>' + (this.material_State == 1 ? "上架" : "下架") + '</td>' +
                        '<td><input id="Detail" type="button" value="查看详情" onclick="detail(' + this.id + ')"/><input id="edit" type="button" value="编辑" onclick="Edit(' + this.id + ')"/></td>' +
                        '</tr>'
                    $("#tb").append(list);
                })
            }
        })
    }
    function AddMaterial() {
        location.href = '/material/AddMaterial';
    }

    function GetChk() {
        if ($('#chk').prop("checked")) {
            $('.chk').each(function () {
                $(this).prop("checked", true);
            })
        } else {
            $('.chk').each(function () {
                $(this).prop("checked", false);
            })
        }
    }

    //详情
    function detail(id) {
        var InfoHtml = `<div><table>`;
        $.ajax({
            url: "http://localhost:49764/api/material/Fill?Id=" + id,
            type: "get",
            success: function (d) {
                console.log(d);
                InfoHtml += `<div>
                            <table>
                            <tr>
                                <td>物料分类：${d.mType_Name}</td>
                                <td>区域：${d.material_PlaceName}</td>
                            </tr>
                            <tr>
                                <td>物料编号：${d.material_Id}</td>
                               <td>物料名称：${d.material_Name}</td>
                            </tr>
                            <tr>
                                <td>物料描述：${d.material_Desc}</td>
                               <td>单价：${d.material_Price}</td>
                            </tr>
                            <tr>
                                <td>库存数量：${d.material_Number}</td>
                                <td>添加日期：${d.material_AddTime}</td>
                            </tr>
                                </table>
                                    </div>`;
                layui.use('layer', function () {
                    var layer = layui.layer;
                    layer.open({
                        type: 1,
                        skin: 'layui-layer-rim', //加上边框
                        area: ['500px', '500px'], //宽高
                        content: InfoHtml
                    });
                });

            }
        })

    }

    //编辑跳转页面
    function Edit(Id) {
        location.href = '/material/UpdMaterial?Id=' + Id;
    }
</script>
