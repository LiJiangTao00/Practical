
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetShowMaterialApprove</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/My97DatePicker/WdatePicker.js"></script>
    <script src="~/layuiadmin/layui/layui.js"></script>
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h2>筛选</h2>
        <input id="Material_Id" type="text" placeholder="物料编号" />
        <input id="Material_Name" type="text" placeholder="物料名称" />
        <select id="szt">
            <option value="-1">==订单状态==</option>
            <option value="1">已发货</option>
            <option value="0">待收货</option>
            <option value="2">已签收</option>
        </select>
        <input id="Order_Proposer" type="text" placeholder="申请人" />
        <input id="Order_SubmissionTime" type="date" placeholder="申请时间"/>
        <input id="btnSX" type="button" class="btn btn-info" value="筛选" onclick="ShaiXuan()" />
    </div>
    <div>
        <table class="tab-content table-bordered">
            <thead>
                <tr>
                    <td>物料编号</td>
                    <td>物料名称</td>
                    <td>缩略图</td>
                    <td>物料类型</td>
                    <td>申请人</td>
                    <td>区域</td>
                    <td>申请时间</td>
                    <td>订单状态</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody id="tb">
            </tbody>
        </table>
        <div>
            <input id="btn_First" type="button" value="首页" onclick="ShaiXuan('first')" />
            <input id="btn_Prev" type="button" value="上一页" onclick="ShaiXuan('prv')" />
            当前第<label id="pageindex">1</label>页/每页<label id="pagesize">1</label>
            总共<label id="totalcount"></label>条/总共<label id="pagetotal"></label>页
            <input id="btn_Next" type="button" value="下一页" onclick="ShaiXuan('next')" />
            <input id="btn_Last" type="button" value="尾页" onclick="ShaiXuan('last')" />
        </div>
    </div>
</body>
</html>
<script>
    $(function () {
        ShowOrder();
    })
    //显示物料订单信息
    function ShowOrder() {
        $.ajax({
            url: "http://localhost:49764/api/material/SelOrder",
            dataType: "json",
            data: {
                PageIndex: "1",
                PageSize: "1",
                Order_State:-1
            },
            type: "get",
            success: function (d) {
                console.log(d);
                $("#totalcount").text(d.dataCount);
                $("#pagetotal").text(d.pageCount);
                $("#tb").empty();
                $(d.pageShowMateriallist1).each(function () {
                    var list = '<tr>' +
                        '<td>' + this.material_Id + '</td>' +
                        '<td>' + this.material_Name + '</td>' +
                        '<td>' + this.material_Image + '</td>' +
                        '<td>' + this.mType_Name + '</td>' +
                        '<td>' + this.order_Proposer + '</td>' +
                        '<td>' + this.place_Name + '</td>' +
                        '<td>' + this.order_ApplyTime + '</td>' +
                        '<td>' + (this.order_State == 1 ? "已发货" : this.order_State == 0 ? "待发货" : "已签收") + '</td>' +
                        '<td><input id="Detail" type="button" value="查看详情" onclick="detail(' + this.id +')"/></td>' +
                        '</tr>'
                    $("#tb").append(list);
                })
            }
        })
    }

    //查询订单
    function ShaiXuan(names) {
        var PageIndex = Number($("#pageindex").text());
        var pageCount = Number($("#pagetotal").text());
        switch (names) {
            case 'all':
                PageIndex = -1;
                break;
            case 'first':
                $("#pageindex").text(1);

                break;
            case 'prv':
                if (PageIndex > 1) {
                    $("#pageindex").text(Number($("#pageindex").text()) - Number(1));
                }

                break;
            case 'next':
                if (PageIndex < pageCount) {
                    $("#pageindex").text(Number($("#pageindex").text()) + Number(1));
                }

                break;
            case 'last':
                $("#pageindex").text(pageCount);
                break;


            default:

                break;
        }
        var Material_Id = $("#Material_Id").val();
        var Material_Name = $("#Material_Name").val();
        var Order_State = $("#szt").val();
        var Order_Proposer = $("#Order_Proposer").val();
        var Order_ApplyTime = $("#Order_ApplyTime").val();

        var PageIndex = $("#pageindex").text(); //页码

        var PageSize = $("#pagesize").text();  //页大小
        // var PageCount = 0; //总页数
        $.ajax({
            url: "http://localhost:49764/api/material/SelOrder",
            type: "get",
            data: {
                Material_Id: Material_Id,
                Material_Name: Material_Name,
                Order_State: Order_State,
                Order_Proposer: Order_Proposer,
                Order_ApplyTime: Order_ApplyTime,
                PageIndex: PageIndex,
                PageSize: PageSize
            },
            dataType: "json",
            success: function (d) {
                $("#pagetotal").text(d.pageCount);
                $("#totalcount").text(d.dataCount);
                $("#pageCount").text(d.pageCount);
                console.log(d);                                                    
                $("#tb").empty();
                $(d.pageShowMateriallist1).each(function () {
                    var list = '<tr>' +
                        '<td>' + this.material_Id + '</td>' +
                        '<td>' + this.material_Name + '</td>' +
                        '<td>' + this.material_Image + '</td>' +
                        '<td>' + this.mType_Name + '</td>' +
                        '<td>' + this.order_Proposer + '</td>' +
                        '<td>' + this.place_Name + '</td>' +
                        '<td>' + this.order_ApplyTime + '</td>' +
                        '<td>' + (this.order_State == 1 ? "已发货" : this.order_State == 0 ? "待发货" : "已签收") + '</td>' +
                        '<td><input id="Detail" type="button" value="查看详情" onclick="detail(' + this.id +')"/></td>' +
                        '</tr>'
                    $("#tb").append(list);
                })
            }
        })
    }


    //详情
    function detail(id) {
        var InfoHtml = `<div><table>`;
        $.ajax({
            url: "http://localhost:49764/api/material/ShowMaterialFill?Id=" + id,
            type: "get",
            success: function (d) {
                console.log(d);
                InfoHtml += `<div>
                            <table>
                            < tr >
                                <td>物料编号：${d.material_Id}</td>
                            </tr >
                            < tr >
                                <td>名称：${d.material_Name}</td>
                                <td>活动名称：${d.activity_Name}</td>
                            </tr >
                            < tr >
                                <td>申请物料价格：${d.material_Price}</td>
                               <td>申请数量：${d.material_Number}</td>
                            </tr >
                            < tr >
                                <td>申请人：${d.order_Proposer}</td>
                                <td>所属产品组：${d.product_Name}</td>
                            </tr >
                             < tr >
                                <td>部门：${d.department_Name}</td>
                                <td>职位：${d.job_Name}</td>
                            </tr > 
                            < tr >
                                <td>联系方式：${d.user_Phone}</td>
                                <td>区域：${d.place_Name}</td>
                            </tr >
                            < tr >
                                <td>申请日期：${d.order_ApplyTime}</td>
                            </tr > 
                                </table>
                                    </div>`;
                layui.use('layer', function () {
                    var layer = layui.layer;
                    layer.open({
                        type: 1,
                        skin: 'layui-layer-rim', //加上边框
                        area: ['500px', '500px'], //宽高
                        content: InfoHtml
                    });
                });

            }
        })

    }
</script>
