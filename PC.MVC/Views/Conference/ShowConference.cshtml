        <a href="#" onclick="Del_Mult()">批量删除</a>
        <input id="btn_First" type="button" value="首页" onclick="PageShow_Search('first')" />
        <input id="btn_Prev" type="button" value="上一页" onclick="PageShow_Search('prv')" />
        当前第<label id="lab_pageindex">1</label>页/总共<label id="lab_pagecount"></label>页
        每页<label id="lab_pagesize">2</label>/总共<label id="lab_datacount"></label>条
        <input id="btn_Next" type="button" value="下一页" onclick="PageShow_Search('next')" />
        <input id="btn_Last" type="button" value="尾页" onclick="PageShow_Search('last')" />
    </div>
