
@{
    Layout = null;
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script src="~/layuiadmin/layui/layui.js"></script>
<link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>分配名额</title>
</head>
<body>
    <div>
        <select id="Sel_DaQv" onchange="DiQvSel()">
            <option value="0">==选择大区==</option>

        </select>
        <select id="Sel_DiQv">
            <option value="0">==选择地区==</option>

        </select>
        <input id="Txt_NameOrPhone" type="text" placeholder="请输入手机号或姓名" />
        <input id="Button1" type="button" value="筛选" onclick="Search()" />
    </div>
    <div>
        <table>
            <thead>
                <tr>
                    <td>姓名</td>
                    <td>手机号</td>
                    <td>工号</td>
                    <td>产品组</td>
                    <td>部门</td>
                    <td>职位</td>
                    <td>所在区域</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody id="tb"></tbody>
        </table>
    </div>


</body>
</html>
<script>
    $(function () {
        DaQvSel();
        Search();
    })
    function DaQvSel() {//大区下拉
        $.ajax({
            url: "http://localhost:49764/api/User/ShowProvince",
            type: "get",
            success: function (data) {
                $(data).each(function (i, k) {
                    $("#Sel_DaQv").append(`<option value="${k.id}" >${k.place_Name}</option>`);
                })
            }

        })
    }
    function DiQvSel() {//地区下拉
        $.ajax({
            url: "http://localhost:49764/api/User/ShowProvince?pid=" + $("#Sel_DaQv").val(),
            type: "get",
            success: function (data) {
                $("#Sel_DiQv").empty();
                $("#Sel_DiQv").append(`<option value="0">==选择地区==</option>`);
                $(data).each(function (i, k) {
                    $("#Sel_DiQv").append(`<option value="${k.id}">${k.place_Name}</option>`);

                })
            }
        })
    }
    function Search() {
        var Qd = {
            "conid": localStorage["QuotaAllocationId"],
            "DaQv": $("#Sel_DaQv").find("option:selected").text(),
            "DiQv": $("#Sel_DiQv").find("option:selected").text(),
            "PhoneOrName": $("#Txt_NameOrPhone").val(),
        };
        console.log(Qd);
        $.ajax({
            url: "http://localhost:49764/api/Conference/ShowUsersNoConid",
            data: Qd,
            type: "post",
            contentType: "application/x-www-form-urlencoded",
            dataType: "json",
            success: function (d) {
                $("#tb").empty();
                $(d).each(function (i, k) {
                    var list = `<tr>
                         <td>${k.user_Name}</td>
                         <td>${k.user_Phone}</td>
                         <td>${k.user_Id}</td>
                         <td>${k.product_Name}</td>
                         <td>${k.department_Name}</td>
                         <td>${k.job_Name}</td>
                         <td>${k.user_Address}</td>
                         <td><a href="#" OnClick="QuotaHtml(${k.uid})">分配名额</a></td>
                         </tr>`
                    $("#tb").append(list);

                })
            }
        })
    }
    function QuotaHtml(id) {
        var Html = `<div><table>`;
        Html += `<tr>
                            <td>参会名额:</td>
                            <td><input id="Text1" type="text" /></td>
                      </tr>                      
                             </table>
                                </div>`;
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.open({
                type: 1,
                skin: 'layui-layer-rim', //加上边框
                area: ['500px', '500px'], //宽高
                btn: ['提交', '关闭'],
                content: Html,
                yes: function () {
                    if (isNaN(Number($("#Text1").val())) || $("#Text1").val()=="") {
                        alert("请输入数字！");
                        return;
                    }
                    $.ajax({
                        url: "http://localhost:49764/api/Conference/AddQuota",
                        type: "get",
                        data: {
                            uid: id,
                            conid: localStorage["QuotaAllocationId"],
                            num: Number($("#Text1").val()),
                        },
                        success: function (data) {
                            if (data > 0) {
                                layer.msg('分配名额完成');
                                location.href = "/Conference/quotaallocation";
                            } else {
                                layer.msg('分配名额失败');
                            }
                        }
                    })
                }
            });
        });
    }
</script>