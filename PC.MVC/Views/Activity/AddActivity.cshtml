        function Type() {
            $.ajax({
                url: "http://49.234.34.192:8034/api/activity/ShowType"
                , type: "Get"
                , success: function (data) {
                    console.log(data);
                    var list = '<option value="0" >请选择</option>';
                    $(data).each(function () {
                        list += '<option value=' + this.id + '>' + this.activityType_Name + '</option>';
                    });
                    $("#Type1").append(list);
                    form.render();
                }
            })
        }
        function Department() {
            $.ajax({
                url: "http://49.234.34.192:8034/api/activity/ShowDep"
                , type: "Get"
                , type: "Get"
                , success: function (data) {
