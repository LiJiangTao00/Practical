            url: "http://localhost:49764/api/activity/Execute?product=" + product + "&did=" + ShowDepartment + "&pid=" + ShowProvince + "&cid=" + ShowCity + "&dis=" + ShowDistrict + "&name=" + txt_Sel,
            type: "get",
